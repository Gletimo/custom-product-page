        class="ai-product-split__image-{{ ai_gen_id }}"
        loading="lazy"
        width="{{ product.images.first.width }}"
        height="{{ product.images.first.height }}"
      >
    {% else %}
      <div class="ai-product-split__image-placeholder-{{ ai_gen_id }}">
